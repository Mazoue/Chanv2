@inherits Chanv2.Bases.BoardsOverviewBase


<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Chanv2</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        @if (AllBoardDetails?.Boards != null)
        {
            @foreach (var board in AllBoardDetails.Boards)
            {
                var href = $"/board/{board.board}";
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href=@href>
                        <span class="oi oi-beaker" aria-hidden="true"></span> @board.Title
                    </NavLink>
                </li>
            }
        }
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Settings
            </NavLink>
        </li>
    </ul>
</div>

