@page "/thread/{boardId}/{threadId}"

<h1>@threadId</h1>

<table class="table">
   <thead>
                <tr>
                    <th></th>
                    <th>Post Id</th>
                    <th>File Name</th>
                    <th>File Extension</th>
                    <th>File Size(KB)</th>
                    <th>Comment</th>
                </tr>
            </thead>
    <tbody>
    @if(Posts != null)
    {
        foreach (var post in Posts.posts.ToList())
        {
         if (@post.fsize > 1)
                    {
                        <tr>
                            <td><button type="button" @onclick="@(async () => await DownloadPost(  post).ConfigureAwait(false))">Download</button></td>
                            <td>@post.no</td>
                            <td>@post.filename.Trim()</td>
                            <td>@post.ext</td>
                            <td>@ConvertBytesToKiloBytes(@post.fsize)</td>
                            <td>@post.com</td>
                        </tr>
                    }   
                 
        }
    }
    </tbody>
</table>