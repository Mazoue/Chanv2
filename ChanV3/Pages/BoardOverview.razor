@page "/board/{boardId}"
@page "/board/{boardId}/{boardName}"

<h1>@BoardTitle</h1>

<table class="headerlayouttable" style="width:100%">
    <tr>
        
    </tr>
</table>
<br />
<br />

<table class="table"  style="width:100%">
    <thead>
    <tr>
        <th></th>
        <th></th>
        <th>Thread Id</th>
        <th>Subject</th>
        <th>Description</th>
    </tr>
    </thead>
    <tbody>
    @if (Catalogues != null)
    {
        @foreach (var page in Catalogues.ToList())
        {
            foreach (var thread in page.Threads)
            {
                <tr>
                    <td><button type="button" @onclick="@(() => ExpandThreadPosts(thread))">Expand</button></td>
                    <td> <input @bind="@thread.Checked" type="checkbox" /></td>
                    <td>@thread.No</td>
                    <td>@thread.Sub</td>
                    <td style="width:0.5%; overflow:scroll; white-space:normal;text-overflow:inherit">@thread.Com</td>
                </tr>
            }
        }
    }
    </tbody>
</table>
